<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <class name="aplicacion.modelo.dominio.PropietarioMascota" catalog="veterinaria1" table="propietario_mascota" optimistic-lock="version">
        <id name="dni" type="integer">
            <column name="prop_dni" length="12"/>
            <generator class="assigned"/>
        </id>
        <property name="nombre" type="string">
            <column name="prop_nombre" length="100" not-null="true"/>
        </property>
        <property name="apellido" type="string">
            <column name="prop_apellido" length="50" not-null="true"/>
        </property>
        <property name="direccion" type="string">
            <column name="prop_direccion" length="100" not-null="true"/>
        </property>
        <property name="telefono" type="string">
            <column name="prop_telefono" length="50" not-null="true"/>
        </property>
        <property name="correoElectronico" type="string">
            <column name="prop_email" length="100" not-null="true"/>
        </property>
        <property name="estado" type="boolean">
            <column name="prop_estado" not-null="true"/>
        </property>
    </class>
</hibernate-mapping>
